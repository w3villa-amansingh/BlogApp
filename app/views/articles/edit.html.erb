

   <h1 class="text-center mt-4">Edit Blog</h1>



<div class="container">
<div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @article%>

  <%= form_with(model: @article,class: "shadow p-3 mb-3 bg-info rounded",  local: true)do |f| %>


        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Blog" %>
          </div>
        </div>
       

   <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Blog" %>
          </div>
        </div>
  <div class="form-group row justify-content-center">
          <%= f.submit "Update Blog", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
   
  </div>
  </div>




